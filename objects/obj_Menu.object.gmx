        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Draw the menu
draw_set_font(font_Menu);
draw_set_halign(fa_right);
draw_set_valign(fa_bottom);

for (var i = 0; i &lt; menu_items; i++;)
    {
    var offset = 2;
    var txt = menu[i];
    if (menu_cursor == i)
        {
        txt = string_insert("&gt; ", txt, 0);
        var col = (make_color_rgb(irandom(255), irandom(255), irandom(255)));
        }
    else
        {
        var col = c_white;
        }
    var xx = menu_x;
    var yy = menu_y - (menu_itemheight * (i * 1.5));
    draw_set_color(c_black);
    draw_text(xx - offset, yy, txt);
    draw_text(xx + offset, yy, txt);
    draw_text(xx, yy + offset, txt);
    draw_text(xx, yy - offset, txt);
    draw_set_color(col);
    draw_text(xx, yy, txt);
    }

// Hacky way to cover the menu slide effect going outside the game
draw_set_color(c_black);
draw_rectangle(gui_width, gui_height - 200, gui_width + 900, gui_height, false);
</string>
          </argument>
